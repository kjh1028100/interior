extends ../base
block content
    if rank
        section
            img(src="/"+rank.imgUrl,width="500px")
            h3=rank.owner.title
            a(href="/user/"+rank.user._id)=rank.user.username
            br
            ul
                li
                    small #{new Date(rank.createAt).toLocaleString("ko-kr",{weekday:"long", year:"numeric", month:"2-digit", day:"2-digit"})}
        section
            a(href="/rank/"+rank._id+"/edit") Edit &rarr;
            br
            a(href="/rank/"+rank._id+"/delete") Delete &rarr;